@model List<MovieDB.Models.Entities.Actor>

@{
    ViewBag.Title = "List Actors";
    Layout = "_Layout";
}

<h2>List Actors</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Nationality</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var actor in Model)
    {
        <tr>
            <td>@actor.Name</td>
            <td>@actor.Birth_Date.ToShortDateString()</td>
            <td>@actor.Nationality</td>
            <td>
                <a href="@Url.Action("Edit", "Actors", new { id = actor.Awardable_ID })" class="btn btn-secondary">Edit</a>

                <!-- Delete Pop-up -->
                <form method="post" action="@Url.Action("Delete", "Actors", new { id = actor.Awardable_ID })" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this actor?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Add", "Actors")" class="btn btn-primary">Add New Actor</a>

<hr />