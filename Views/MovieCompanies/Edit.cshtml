@model MovieDB.Models.MovieCompanyViewModel

@{
    ViewBag.Title = "Edit Movie-Company Association";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>
<p class="alert alert-info">Note: Editing an association typically involves deleting the current one and creating a new one if you need to change the movie or company. The form below pre-fills the current association.</p>

<form asp-action="Edit" method="post"> @* The POST action for Edit is not fully implemented for modification *@
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    @* Hidden fields to identify the original record if you were to implement a replace operation *@
    @* <input type="hidden" name="originalMovieId" value="@ViewBag.CurrentMovieId" /> *@
    @* <input type="hidden" name="originalCompanyId" value="@ViewBag.CurrentCompanyId" /> *@

    <div class="mb-3">
        <label asp-for="Movie_ID" class="form-label"></label>
        <select asp-for="Movie_ID" class="form-control" asp-items="ViewBag.Movies as SelectList">
            <option value="">-- Select Movie --</option>
        </select>
        <span asp-validation-for="Movie_ID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Company_ID" class="form-label"></label>
        <select asp-for="Company_ID" class="form-control" asp-items="ViewBag.Companies as SelectList">
            <option value="">-- Select Company --</option>
        </select>
        <span asp-validation-for="Company_ID" class="text-danger"></span>
    </div>

    <div class="mt-3">
        @* <button type="submit" class="btn btn-primary">Save Changes</button> *@
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
