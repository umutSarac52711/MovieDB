@model List<MovieDB.Models.Entities.Movie>

@{
    ViewBag.Title = "List Movies";
    Layout = "_Layout";
}

<h2>List Movies</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Release Date</th>
            <th>Language</th>
            <th>Duration (mins)</th>
            <th>Budget</th>
            <th>Revenue</th>
            <th>Rating</th>
            <th>Poster URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Release_Date.ToShortDateString()</td>
                <td>@movie.Language</td>
                <td>@movie.Duration</td>
                <td>@movie.Budget.ToString()</td>
                <td>@movie.Revenue.ToString()</td>
                <td>@movie.Rating</td>
                <td><img src="@movie.PosterUrl" alt="Poster" style="width: 100px; height: auto;" /></td>
                <td>
                    <a href="@Url.Action("Edit", "Movies", new { id = movie.Awardable_ID })" class="btn btn-secondary">Edit</a>
                    
                    <!-- Delete Pop-up -->
                    <form method="post" action="@Url.Action("Delete", "Movies", new { id = movie.Awardable_ID })" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Add", "Movies")" class="btn btn-primary">Add New Movie</a>

<hr />