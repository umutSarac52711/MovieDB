@model MovieViewModel

@{
    ViewBag.Title = "Add Movie"; 
    Layout = "_Layout";
}

<h2>Add Movie</h2>

<form method="post" asp-action="Add">
    <div class="mt-3">
        <div class="mb-3">
            <label class="form-label" asp-for="Title">Name</label>
            <input type="text" class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    
        <div class="mb-3">
            <label class="form-label" asp-for="Release_Date">Release Date</label>
            <input type="date" class="form-control" asp-for="Release_Date" />
            <span asp-validation-for="Release_Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Language">Language</label>
            <input type="text" class="form-control" asp-for="Language" />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Duration">Duration (minutes)</label>
            <input type="number" class="form-control" asp-for="Duration" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Budget">Budget</label>
            <input type="number" step="0.01" class="form-control" asp-for="Budget" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Revenue">Revenue</label>
            <input type="number" step="0.01" class="form-control" asp-for="Revenue" />
            <span asp-validation-for="Revenue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Rating">Rating</label>
            <input type="number" step="0.1" class="form-control" asp-for="Rating" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="PosterUrl">Poster URL</label>
            <input type="url" class="form-control" asp-for="PosterUrl" />
            <span asp-validation-for="PosterUrl" class="text-danger"></span>
        </div>
        
        <!-- Genre Addition -->
        <div class="mb-3">
            <label asp-for="Genres" class="form-label"></label>
            <select asp-for="Genres" asp-items="ViewBag.Genres as SelectList" class="form-control" multiple="multiple">
                <option value="">-- Select Genres --</option>
            </select>
            <span asp-validation-for="Genres" class="text-danger"></span>
        </div>

        <!-- Actor Addition -->
        <div class="mb-3">
            <label asp-for="SelectedActorIds" class="form-label">Actors</label>
            <select asp-for="SelectedActorIds" asp-items="ViewBag.ActorsList as SelectList" class="form-control" multiple="multiple">
                <option value="">-- Select Actors --</option>
            </select>
            <span asp-validation-for="SelectedActorIds" class="text-danger"></span>
        </div>

        <!-- Director Addition -->
        <div class="mb-3">
            <label asp-for="SelectedDirectorIds" class="form-label">Director</label>
            <select asp-for="SelectedDirectorIds" asp-items="ViewBag.DirectorsList as SelectList" class="form-control" multiple="multiple">
                <option value="">-- Select Director --</option>
            </select>
            <span asp-validation-for="SelectedDirectorIds" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="SelectedCompanyId" class="form-label">Production Company</label>
            <select asp-for="SelectedCompanyId" asp-items="ViewBag.CompaniesList as SelectList" class="form-control">
                <option value="">-- Select Production Company --</option>
            </select>
            <span asp-validation-for="SelectedCompanyId" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Add Movie</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
