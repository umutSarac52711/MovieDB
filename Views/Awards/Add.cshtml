@model MovieDB.Models.AwardViewModel

@{
    ViewData["Title"] = "Add New Award Nomination";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <partial name="_AwardFOrm" model="Model" />
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">Create Nomination</button>
                <a asp-action="List" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* Add any client-side JS for dynamic dropdown logic here if desired *@
}