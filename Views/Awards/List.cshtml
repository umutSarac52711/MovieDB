@model List<MovieDB.Models.Entities.Award>

@{
    ViewBag.Title = "List Awards";
    Layout = "_Layout";
}

<h2>List Awards</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Year</th>
        <th>Attributed To</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var award in Model)
    {
        <tr>
            <td>@award.Name</td>
            <td>@award.Award_Year</td>
            <td>
                @{
                    var awardableName = "N/A";
                    if (award.Awardable != null)
                    {
                        awardableName = award.Awardable.Kind switch
                        {
                            "Movie" => award.Awardable.Movie?.Title,
                            "Actor" => award.Awardable.Actor?.Name,
                            "Director" => award.Awardable.Director?.Name,
                            _ => "Unknown Awardable"
                        };
                    }
                }
                @awardableName
            </td>
            <td>
                <a href="@Url.Action("Edit", "Awards", new { id = award.Award_ID })" class="btn btn-secondary">Edit</a>

                <form method="post" action="@Url.Action("Delete", "Awards", new { id = award.Award_ID })" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this award?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Add", "Awards")" class="btn btn-primary">Add New Award</a>

<hr />
