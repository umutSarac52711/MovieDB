@model List<MovieDB.Models.Entities.Award>

@{
    ViewBag.Title = "List Awards";
    Layout = "_Layout";
}

<h2>List Awards</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Event Name</th>
        <th>Year</th>
        <th>Category</th>
        <th>Nominee</th>
        <th>Movie Context</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var award in Model)
    {
        <tr>
            <td>@award.Event_Name</td>
            <td>@award.Award_Year</td>
            <td>@award.Category</td>
            <td>
                @{
                    var nomineeName = "N/A";
                    if (award.Nominee != null)
                    {
                        nomineeName = award.Nominee.Kind switch
                        {
                            "Movie" => award.Nominee.Movie?.Title,
                            "Actor" => award.Nominee.Actor?.Name,
                            "Director" => award.Nominee.Director?.Name,
                            _ => "Unknown Nominee"
                        };
                    }
                }
                @nomineeName
            </td>
            <td>
                @(award.MovieContext?.Title ?? "N/A")
            </td>
            <td>@award.Nomination_Status</td>
            <td>
                <a href="@Url.Action("Edit", "Awards", new { id = award.Award_ID })" class="btn btn-secondary btn-sm">Edit</a>

                <form method="post" action="@Url.Action("DeleteConfirmed", "Awards", new { id = award.Award_ID })" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this award?');">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Add", "Awards")" class="btn btn-primary">Add New Award</a>

<hr />
