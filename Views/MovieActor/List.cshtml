@model List<MovieDB.Models.Entities.MovieActor>

@{
    ViewBag.Title = "List of Movie - Actor Associations";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Movie-Actor Association</a>
</p>

@if (!Model.Any())
{
    <p>No movie-actor associations found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Actor Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Movie?.Title ?? "N/A")</td>
                    <td>@(item.Actor?.Name ?? "N/A")</td>
                    <td>
                        @* <a asp-action="Edit" asp-route-movieId="@item.Movie_ID" asp-route-actorId="@item.Actor_ID" class="btn btn-sm btn-secondary">Edit</a> *@
                        <form asp-action="Delete" asp-route-movieId="@item.Movie_ID" asp-route-actorId="@item.Actor_ID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this association?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />
