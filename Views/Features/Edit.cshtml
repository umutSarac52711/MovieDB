@model MovieDB.Models.FeaturesViewModel

@{
    ViewBag.Title = "Edit Feature Relationship";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Original_Movie_ID" />
    <input type="hidden" asp-for="Original_Director_ID" />
    <input type="hidden" asp-for="Original_Actor_ID" />

    <div class="mb-3">
        <label asp-for="Movie_ID" class="form-label"></label>
        <select asp-for="Movie_ID" class="form-control" asp-items="Model.Movies">
            <option value="">-- Select Movie --</option>
        </select>
        <span asp-validation-for="Movie_ID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Director_ID" class="form-label"></label>
        <select asp-for="Director_ID" class="form-control" asp-items="Model.Directors">
            <option value="">-- Select Director --</option>
        </select>
        <span asp-validation-for="Director_ID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Actor_ID" class="form-label"></label>
        <select asp-for="Actor_ID" class="form-control" asp-items="Model.Actors">
            <option value="">-- Select Actor --</option>
        </select>
        <span asp-validation-for="Actor_ID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
