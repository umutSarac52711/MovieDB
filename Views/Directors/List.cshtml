@model List<MovieDB.Models.Entities.Director>

@{
    ViewBag.Title = "List Directors";
    Layout = "_Layout";
}

<h2>List Directors</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Nationality</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var director in Model)
    {
        <tr>
            <td>@director.Name</td>
            <td>@director.Birth_Date.ToShortDateString()</td>
            <td>@director.Nationality</td>
            <td>
                <a href="@Url.Action("Edit", "Directors", new { id = director.Awardable_ID })" class="btn btn-secondary">Edit</a>

                <!-- Delete Pop-up -->
                <form method="post" action="@Url.Action("Delete", "Directors", new { id = director.Awardable_ID })" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this director?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Add", "Directors")" class="btn btn-primary">Add New Director</a>

<hr />
