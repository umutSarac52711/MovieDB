@model MovieDB.Models.DirectorViewModel

@{
    ViewBag.Title = "Edit Director";
    Layout = "_Layout";
}

<h2>Edit Director: @Model.Name</h2>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Awardable_ID" />

    <div class="mt-3">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Birth_Date" class="form-label"></label>
            <input asp-for="Birth_Date" type="date" class="form-control" />
            <span asp-validation-for="Birth_Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Nationality" class="form-label"></label>
            <input asp-for="Nationality" class="form-control" />
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-action="List" class="btn btn-secondary mt-3">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}